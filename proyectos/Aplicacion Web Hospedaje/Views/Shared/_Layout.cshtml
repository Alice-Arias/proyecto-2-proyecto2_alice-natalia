<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Aplicación Web Hospedaje</title> 
    <meta name="viewport" content="width=device-width, initial-scale=1" /> 

        <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
        <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
        <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .footer-icon {
            filter: brightness(0) saturate(100%) invert(57%) sepia(91%) saturate(693%) hue-rotate(358deg) brightness(101%) contrast(101%);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container">

            <a class="navbar-brand logo" href="/">
                <img src="~/images/Caribbeansaty.png" alt="Icono CaribbeanStay" style="height: 40px; vertical-align: middle;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"
                    style="border-color: #fca311;">
                <span class="navbar-toggler-icon"
                       style="filter: invert(44%) sepia(78%) saturate(445%) hue-rotate(4deg) brightness(96%) contrast(90%);"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto menu">

                    <li class="nav-item"><a class="nav-link" href="/" style="color:#fff;">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/LoginCliente" style="color:#fff;">Iniciar Sesión Cliente</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login" style="color:#fff;">Iniciar Sesión hospedaje</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/About" style="color:#fff;">Conoce más de nosotros</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody() 
    </div>

    <footer class="bg-light text-dark py-4 mt-5">
        <div class="container d-flex flex-wrap justify-content-between align-items-start">

            <div class="d-flex flex-column me-4" style="max-width: 300px;">
                <div class="d-flex align-items-center mb-2">
                    <img src="@Url.Content("~/images/Caribbeansaty.png")" alt="CaribbeanStay" style="height: 24px;" class="me-2" />
                </div>
                <p class="mb-2">Proyecto de la Municipalidad de Limón para promover el potencial turístico de Limón.</p>

                <div>
                    <a href="#"><img src="~/images/facebook.png" alt="Facebook" width="24" class="me-2 footer-icon" /></a>
                    <a href="#"><img src="~/images/twiter.png" alt="Twitter" width="24" class="me-2 footer-icon" /></a>
                    <a href="#"><img src="~/images/instragram.png" alt="Instagram" width="24" class="footer-icon" /></a>
                </div>
            </div>

            <div class="me-4">
                <h6 class="text-uppercase mb-3">Compañía</h6>
                <p><a href="#" class="text-dark text-decoration-none">Sobre</a></p>
                <p><a href="#" class="text-dark text-decoration-none">Career</a></p>
                <p><a href="#" class="text-dark text-decoration-none">Móvil</a></p>
            </div>

            <div class="me-4">
                <h6 class="text-uppercase mb-3">Contacto</h6>
                <p><a href="#" class="text-dark text-decoration-none">Asóciate</a></p>
                <p><a href="#" class="text-dark text-decoration-none">Preguntas</a></p>
                <p><a href="#" class="text-dark text-decoration-none">Blog</a></p>
            </div>

            <div>
                <h6 class="text-uppercase mb-3">Contáctanos</h6>
                <p class="mb-1">+506 2710 0989</p>
                <p class="mb-1">info@caribbeanstay.com</p>
                <p class="mb-0">205. Calle L, Limón<br>BD12025</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
